#!/bin/sh
#
# $FML: rc.router,v 1.11 2001/08/14 21:58:51 fukachan Exp $
#

FLOPPY_ROUTER_VERSION=0.9

echo ""
echo "     Welcome to NetBSD/i386 one floppy NATBOX $FLOPPY_ROUTER_VERSION"
echo ""


if [ -f /etc/rc.subr ]
then
	. /etc/rc.subr
else
	echo Error: /etc/rc.subr not found 2>&1
	exit 1
fi

if [ -f /etc/rc.conf ]
then
	. /etc/rc.conf
else
	echo Error: /etc/rc.conf not found 2>&1
	exit 1
fi

# link for /bin/ps
ln -s /netbsd /netbsd

if [ -f /etc/hosts ]
then
	cp /etc/hosts /etc/hosts
fi

if [ -f /etc/resolv.conf ]
then
	cp /etc/resolv.conf /etc/resolv.conf
fi

if [ -f /etc/myname ]
then
	hostname `cat /etc/myname`
	echo "hostname: `hostname`"
fi

echo ""; echo "--- Configuring networking:";


for if in `ifconfig -l`
do
	if [ -f /etc/ifconfig.$if ]
	then
		echo "ifconfig $if `cat /etc/ifconfig.$if`"
		ifconfig $if `cat /etc/ifconfig.$if`
	fi
done

if [ -f /etc/mygate ]
then
	route add default `cat /etc/mygate`
fi

if checkyesno syslogd; then
   if [ -f /etc/syslog.conf ]
   then
	cp /dev/null var/run/utmp
	syslogd -f /etc/syslog.conf
   fi
fi

if [ -f /etc/ipf.conf ]
then
   echo ""; echo "--- enable IPFilter"
   /sbin/ipf -E -f /etc/ipf.conf
   /usr/sbin/ipfstat -i
   /usr/sbin/ipfstat -o

   if [ -f /etc/ipnat.conf ]
   then
	echo ""; echo "--- enable NAT Box"
	/usr/sbin/ipnat -f /etc/ipnat.conf
	/usr/sbin/ipnat -l
   fi

   if checkyesno ipmon; then
	echo 'starting ipmon'
	ipmon $ipmon_flags &
   fi
fi

echo ""

exit 0;
